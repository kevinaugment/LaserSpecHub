{
  "name": "laserspec-hub",
  "version": "0.1.0",
  "private": true,
  "description": "LaserSpecHub - Laser processing equipment specification comparison platform",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "preview": "wrangler pages dev .next",
    "deploy": "next build && wrangler pages deploy .next",
    "db:migrate": "wrangler d1 migrations apply laserspec-db --remote",
    "db:local": "wrangler d1 migrations apply laserspec-db --local"
  },
  "dependencies": {
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "zustand": "^4.5.0",
    "jspdf": "^2.5.1",
    "@cloudflare/next-on-pages": "^1.12.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "typescript": "^5.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "tailwindcss": "^3.4.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "prettier": "^3.2.0",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "wrangler": "^3.50.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

